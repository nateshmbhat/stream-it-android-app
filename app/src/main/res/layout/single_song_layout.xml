<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:theme="@style/Base.V7.Theme.AppCompat"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/apple_music_icon"
        android:layout_height="150dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Song title"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:id="@+id/TextView_song_title_single_music"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/md_grey_700"
        android:text="album"
        android:textAlignment="center"
        android:id="@+id/TextView_song_album_single_music"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/playMusicButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Play"
            android:textAlignment="center" />

        <Button
            android:id="@+id/pauseMusicButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pause"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/TextView_single_music_metadata"
        android:textColor="@color/md_blue_grey_900"
        android:padding="20dp"
        android:text="My Text"
        android:layout_height="match_parent" />

</LinearLayout>